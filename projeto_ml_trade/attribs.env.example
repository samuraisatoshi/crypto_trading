# Binance API Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Data Storage Configuration
DATA_DIR=data
STORAGE_TYPE=local  # local or cloud

# Cloud Storage Configuration (if using cloud storage)
# CLOUD_PROVIDER=aws  # aws, gcp, or azure
# CLOUD_BUCKET=your_bucket_name
# CLOUD_REGION=your_region

# Application Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_CACHE=true
CACHE_TTL=3600  # Cache time to live in seconds

# Trading Parameters
DEFAULT_TIMEFRAME=1d
DEFAULT_SYMBOL=BTCUSDT
INITIAL_BALANCE=10000
RISK_PER_TRADE=0.02  # 2% risk per trade
MAX_POSITIONS=3

# Technical Analysis Settings
DEFAULT_MA_PERIODS=21,55,80,100
DEFAULT_RSI_PERIOD=14
DEFAULT_MACD_FAST=12
DEFAULT_MACD_SLOW=26
DEFAULT_MACD_SIGNAL=9

# Chart Settings
CHART_STYLE=charles  # charles, classic, yahoo
CHART_TYPE=candle   # candle, line, renko
CHART_THEME=light   # light or dark
